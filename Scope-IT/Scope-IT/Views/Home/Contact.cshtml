@model Scope_IT.Models.ContactEmail

<div class="container" style="position:relative; z-index:2;">
    <div class="row">
        <div class="col-md-7">
            <input type="hidden" id="sendMessageUrl" value="@Url.Action("Contact","Home")" />
            <h3>Napisz do nas</h3>
            @using (Html.BeginForm(null, null, FormMethod.Post, new { id = "emailForm" }))
            {
                @Html.AntiForgeryToken()
                <div class="form-horizontal">
                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })

                    <div class="form-row">
                        <div class="col-md-6 mb-3">
                            @Html.EditorFor(model => model.FirstName, new { htmlAttributes = new { @class = "form-control transparent-input", @placeholder = "Imię" } })
                            @Html.ValidationMessageFor(model => model.FirstName, "", new { @class = "text-danger" })
                        </div>
                        <div class="col-md-6 mb-3">
                            @Html.EditorFor(model => model.LastName, new { htmlAttributes = new { @class = "form-control  transparent-input", @placeholder = "Nazwisko" } })
                            @Html.ValidationMessageFor(model => model.LastName, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="form-row">
                        <div class="col-md-6 mb-3">
                            @Html.EditorFor(model => model.Email, new { htmlAttributes = new { @class = "form-control  transparent-input", @placeholder = "Email" } })
                            @Html.ValidationMessageFor(model => model.Email, "", new { @class = "text-danger" })
                        </div>
                        <div class="col-md-6 mb-3">
                            @Html.EditorFor(model => model.Phone, new { htmlAttributes = new { @class = "form-control  transparent-input", @placeholder = "Numer telefonu" } })
                            @Html.ValidationMessageFor(model => model.Phone, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="form-row">
                        <div class="col-md-12 mb-3">
                            @Html.EditorFor(model => model.Subject, new { htmlAttributes = new { @class = "form-control  transparent-input", @placeholder = "Temat wiadomości" } })
                            @Html.ValidationMessageFor(model => model.Subject, "", new { @class = "text-danger" })
                        </div>
                    </div>
                    <div class="form-row">
                        <div class="col-md-12 mb-3">
                            @Html.TextAreaFor(model => model.Message, new { @class = "form-control  transparent-input", @placeholder = "Treść wiadomości", @rows = 8 })
                            @Html.ValidationMessageFor(model => model.Message, "", new { @class = "text-danger" })
                        </div>
                    </div>
                    <div class="form-row">
                        <div class="col-md-12 mb-3">
                            <button id="btnSubmit" type="submit" class="btn btn-primary float-right">Wyślij wiadomość</button>
                            <span id="sendMessageLoader" class="float-right" style="display:none; margin-right:5px;"><img src="@Url.Content("~/Content/Images/ajax-loader.gif")" alt="Wysyłanie..." /></span>
                        </div>
                    </div>
                    <span style="font-weight:bold;" id="resultMessage"></span>
                </div>
            }
        </div>
        <div class="col-md-4 offset-md-1">
            <h3>Nasz adres</h3>
            <h5>scope-IT Andrzej Kuźba</h5>
            <h5>Mieszka I 39</h5>
            <h5>66-400 Gorzów Wlkp.</h5>
        </div>
    </div>
</div>

<script src="~/Scripts/jquery.validate.min.js"></script>
<script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>
<script src="~/Scripts/Custom/send-email.js"></script>